#!/usr/bin/env php
<?php

namespace PHPChunkit;

use PHPChunkit\Container;
use PHPChunkit\PHPChunkit;
use Symfony\Component\Console\Input\ArgvInput;
use Symfony\Component\Console\Output\ConsoleOutput;

$rootDir = file_exists(__DIR__.'/../vendor/autoload.php')
    ? realpath(__DIR__.'/..')
    : realpath(__DIR__.'/../../../..')
;

require_once sprintf('%s/vendor/autoload.php', $rootDir);

(new PHPChunkit($rootDir, new Container()))
    ->getContainer()['phpchunkit.application']
    ->run(
        new ArgvInput(),
        new ConsoleOutput()
    )
;
