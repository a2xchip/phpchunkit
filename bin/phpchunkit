#!/usr/bin/env php
<?php

namespace PHPChunkit;

use PHPChunkit\Container;
use PHPChunkit\PHPChunkit;
use Symfony\Component\Console\Input\ArgvInput;
use Symfony\Component\Console\Output\ConsoleOutput;

class RootDirFinder
{
    const AUTOLOADER_PATH = 'vendor/autoload.php';

    public function findRootDir()
    {
        $path = getcwd();

        if ($this->isAutoloaderPresent($path)) {
            return $path;
        }

        throw new \RuntimeException(sprintf('Could not find path to vendor/autoload.php'));
    }

    private function isAutoloaderPresent(string $path) : bool
    {
        return file_exists(sprintf('%s/%s', $path, self::AUTOLOADER_PATH));
    }
}

$rootDir = (new RootDirFinder())->findRootDir();

require_once sprintf('%s/%s', $rootDir, RootDirFinder::AUTOLOADER_PATH);

(new PHPChunkit($rootDir, new Container()))
    ->getContainer()['phpchunkit.application']
    ->run(
        new ArgvInput(),
        new ConsoleOutput()
    )
;
